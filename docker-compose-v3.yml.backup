version: "3"
services:
    rabbit:
        image:
            rabbitmq:3-management
        ports:
            - "15672:15672"
        environment:
          - RABBITMQ_DEFAULT_USER=stackrabbit
          - RABBITMQ_DEFAULT_PASS=password
        networks:
            cnalan:
                aliases:
                    - rabbit
    redis:
        image:
            redis
        networks:
            cnalan:
                aliases:
                    - redis
    db:
        image: ##REGISTRY##/cloudnativeapp_db
        environment:
            - MYSQL_ROOT_PASSWORD=##MYSQL_ROOT_PASSWORD##
            - MYSQL_DATABASE=##MYSQL_DATABASE##
            - MYSQL_USER=##MYSQL_USER##
            - MYSQL_PASSWORD=##MYSQL_PASSWORD##
        networks:
            cnalan:
                aliases:
                    - db
    web:
        image: ##REGISTRY##/cloudnativeapp_web
        ports:
            - "80:80"
        links:
          - i
          - s
          - b
          - p
        networks:
            cnalan:
    i:
        image: ##REGISTRY##/cloudnativeapp_i
        links:
            - db
        networks:
            cnalan:
              aliases:
                - i
    s:
        image: ##REGISTRY##/cloudnativeapp_s
        links:
            - redis
        networks:
            cnalan:
              aliases:
                - s
    b:
        image: ##REGISTRY##/cloudnativeapp_b
        links:
            - w
            - rabbit
        networks:
            cnalan:
              aliases:
                - b
    p:
        image: ##REGISTRY##/cloudnativeapp_p
        networks:
            cnalan:
              aliases:
                - p
    w:
        image: ##REGISTRY##/cloudnativeapp_w
        networks:
            cnalan:
              aliases:
                - w
    w1:
        image: ##REGISTRY##/cloudnativeapp_w1
        links:
          - rabbit
          - redis
        networks:
            cnalan:
              aliases:
                - w1
    w2:
        image: ##REGISTRY##/cloudnativeapp_w2
        links:
          - rabbit
        environment:
          - W2_APIKEY=##W2_APIKEY##
          - W2_TO=##W2_TO##
          - W2_DOMAIN=##W2_DOMAIN##
        networks:
            cnalan:
              aliases:
                - w2
networks:
    cnalan:
        driver: overlay
